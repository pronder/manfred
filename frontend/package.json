    "dependencies": {
        "@testing-library/jest-dom": "^5.14.1",
        "@testing-library/react": "^13.0.0",
        "@testing-library/user-event": "^13.2.1",
        "@types/jest": "^27.0.1",
        "@types/node": "^16.7.13",
        "@types/react": "^18.0.0",
        "@types/react-dom": "^18.0.0",
        "bootstrap": "^5.2.1",
        "react": "^18.2.0",
        "react-bootstrap": "^2.5.0",
        "react-dom": "^18.2.0",
        "react-scripts": "5.0.1",
        "sass": "^1.54.9",
        "typescript": "*",
        "web-vitals": "^2.1.0"
    },
    "scripts": {
        "start": "PORT=5555 react-scripts start",
        "build": "npx --no-install tsc",
        "build-dev": "react-scripts build",
        "test": "npx --no-install jest",
        "format-write": "npx --no-install prettier --write .",
        "format-check": "npx --no-install prettier --check .",
        "lint": "npx --no-install eslint . --ext .tsx,.ts,.js",
        "lint-fix": "npx --no-install eslint  . --ext .tsx,.ts --fix",
        "prepare": "cd .. && husky install frontend/.husky",
        "install-githooks": "cd .. && frontend/node_modules/.bin/husky install frontend/.husky"
    },
    "browserslist": {
        "production": [
            ">0.2%",
            "not dead",
            "not op_mini all"
        ],
        "development": [
            "last 1 chrome version",
            "last 1 firefox version",
            "last 1 safari version"
        ]
    },
    "devDependencies": {
        "@typescript-eslint/eslint-plugin": "^5.0.0",
        "eslint": "^8.23.1",
        "eslint-config-airbnb": "^19.0.4",
        "eslint-config-airbnb-base": "^15.0.0",
        "eslint-config-airbnb-typescript": "^17.0.0",
        "eslint-config-prettier": "^8.5.0",
        "eslint-config-standard-with-typescript": "^23.0.0",
        "eslint-plugin-import": "^2.25.2",
        "eslint-plugin-n": "^15.0.0",
        "eslint-plugin-promise": "^6.0.0",
        "eslint-plugin-react": "^7.31.8",
        "husky": "^8.0.1",
        "jest": "^29.0.3",
        "prettier": "^2.7.1"
    }
