{
    "name": "manfred-backend",
    "version": "1.0.0",
    "license": "MIT",
    "scripts": {
        "build": "npx --no-install tsc",
        "dev": "yarn install && nodemon",
        "test": "npx --no-install jest",
        "check-prettier-rules-conflicts": "npx --no-install eslint-config-prettier ./**/*.ts",
        "format-write": "npx --no-install prettier --write .",
        "format-check": "npx --no-install prettier --check .",
        "lint": "npx --no-install eslint  . --ext .ts",
        "lint-fix": "npx --no-install eslint  . --ext .ts --fix",
        "install-githooks": "cd .. && npx --no-install husky install backend/.husky"
    },
    "dependencies": {
        "compression": "^1.7.4",
        "dotenv": "16.0.1",
        "express": "4.18.1",
        "pg": "^8.8.0",
        "pg-hstore": "^2.3.4",
        "reflect-metadata": "^0.1.13",
        "sequelize": "^6.21.6",
        "sequelize-typescript": "^2.1.3"
    },
    "devDependencies": {
        "@types/compression": "^1.7.2",
        "@types/express": "4.17.13",
        "@types/jest": "28.1.4",
        "@types/node": "17.0.21",
        "@types/validator": "^13.7.7",
        "@typescript-eslint/eslint-plugin": "5.33.0",
        "@typescript-eslint/parser": "5.33.0",
        "eslint": "8.19.0",
        "eslint-config-airbnb-base": "15.0.0",
        "eslint-config-airbnb-typescript": "^17.0.0",
        "eslint-config-prettier": "^8.5.0",
        "eslint-plugin-import": "^2.26.0",
        "husky": "^8.0.1",
        "jest": "28.1.2",
        "jest-express": "1.12.0",
        "nodemon": "2.0.19",
        "prettier": "^2.7.1",
        "ts-jest": "28.0.5",
        "ts-node": "10.8.2",
        "typescript": "4.7.4"
    }
}
